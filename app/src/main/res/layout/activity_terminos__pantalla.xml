<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Terminos_Pantalla">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/barra" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="TERMINOS" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="19dp"
        android:background="@color/black"
        app:srcCompat="@drawable/apagar" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="19dp"
        android:background="@color/black"
        app:srcCompat="@drawable/info" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="22dp"
        android:background="@color/black"
        app:srcCompat="@drawable/inicio" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="321dp"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="108dp"
        android:scaleX="60"
        android:tint="#2BAEBA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/bottom_bar" />

    <TextView
        android:id="@+id/txtTextoTerminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="226dp"
        android:textColor="#6A6868"
        android:textSize="14dp"
        android:text="El costo de la consulta solo incluye diagnóstico.\n \n NO incluye tratamiento médico,\n medicinas y costo de operaciones.\n \n Si por algún motivo no llegará a la cita, el pago\n no será reembolsado. \n \n Llegar 30 minutos como máximo antes del horario de \n la cita." />

    <TextView
        android:id="@+id/txtTerminoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="30dp"
        android:text="TERMINOS Y CONDICIONES DEL PAGO"
        android:textAlignment="center"
        android:textColor="#6A6868"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="255dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="202dp"
        android:backgroundTint="#E32A2A"
        android:text="ACEPTAR"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="70dp" />
</RelativeLayout>